# Disable fish greeting
set -g fish_greeting

# Add correct paths
fish_add_path $HOME/.local/share/mise/shims
fish_add_path /opt/homebrew/bin
fish_add_path $HOME/.local/bin
fish_add_path $HOME/.krew/bin

# Set envs
set -gx EDITOR vim
set -gx LANG en_US.UTF-8
set -gx LC_ALL en_US.UTF-8
set -gx XDG_CONFIG_HOME $HOME/.config

{{- if (eq .chezmoi.os "darwin") }}
set -gx GITHUB_TOKEN {{ onepasswordRead "op://Private/Github Personal Access Token/token" "my" }}
set -gx SSH_AUTH_SOCK $HOME/.1password/agent.sock
set -gx CPPFLAGS -I$(brew --prefix)/include
set -gx LDFLAGS -L$(brew --prefix)/lib
{{ end -}}

# Set aliases
alias k 'kubectl'
alias vim 'nvim'
alias df 'df -h'
alias mkdir 'mkdir -p -v'
alias ll 'ls -lha'

# Activate mise
eval "$($HOME/.local/bin/mise activate fish)"

# Use atuin only for history sync
atuin init fish --disable-up-arrow --disable-ctrl-r | source

# Use starship theme
starship init fish | source